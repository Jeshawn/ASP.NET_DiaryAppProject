@model DiaryEntries
<div class="container">
    <div class="card col-md-12">
        <div class="card-header ">
            <h2>Are you sure you want to erase this memory?</h2>
            <br />
            <h3>@Model.Title</h3>
        </div>
        <div class="card-body">
            <form method="post" asp-action="DeleteDiaryEntry" asp-controller="DiaryEntries" class="d-flex space-between">
                <button type="submit" class="btn btn-outline-danger">I am certain.</button>
                <div class="form-group" hidden>
                    <input asp-for="@Model.Id"/>
                </div>
                <div class="form-group" hidden>
                    <input asp-for="@Model.Title" />
                </div>
                <div class="form-group" hidden>
                    <input asp-for="@Model.Entry" />
                </div>
                <div class="form-group" hidden>
                    <input asp-for="@Model.Date" />
                </div>
                <a asp-action="Index" asp-controller="DiaryEntries" class="btn btn-primary">No!</a>
            </form>
        </div>
    </div>
</div>



